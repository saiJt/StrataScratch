# Import your libraries
import pandas as pd

employee_info = db_employee[['id','salary','department_id']]

final_table = pd.merge(employee_info,db_dept,left_on = 'department_id',right_on = 'id')

marketing = final_table[final_table['department'] == 'marketing']['salary'].max().astype(int)

engineering = final_table[final_table['department'] == 'engineering']['salary'].max().astype(int)

result = pd.DataFrame({'salary_diffrence': [(abs(marketing - engineering))]})
